<h1>Employees of Dunder Mifflin</h1>

<table style="width: 35%">
  <tr>
    <th>Name</th>
    <th>Alias</th>
    <th>Title</th>
    <th>Office</th>
    <th>Dog</th>
    <th>Link</th>
  </tr>

  <% @employees.each do |employee|%>
    <tr>
      <td><%= employee.to_s%></td>
      <td><%= employee.alias%></td>
      <td><%= employee.title%></td>
      <td><%= employee.office%></td>
      <td><%= link_to "#{employee.dog.name}", dog_path(employee.dog)%></td>
      <td><%= link_to "Details", employee%></td>
      <td><%= link_to "Edit", edit_employee_path(employee)%></td>
    </tr>
    <%end%>

</table>
